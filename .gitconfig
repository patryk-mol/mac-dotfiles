[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Dracula
    navigate = true
    side-by-side = true
    line-numbers = true
[interactive]
    diffFilter = delta --color-only
